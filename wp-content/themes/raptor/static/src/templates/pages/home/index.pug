												label.filter-drop__label(for="retailer-8") check 8
											li.filter-drop__item.js-drop-filter-item
												input.filter-drop__check#retailer-9(type="checkbox", name="range", value="")
												label.filter-drop__label(for="retailer-9") check 9
											li.filter-drop__item.js-drop-filter-item
												input.filter-drop__check#retailer-10(type="checkbox", name="range", value="")
												label.filter-drop__label(for="retailer-10") check 10
				.find-form__result Showing 25 results
				.tabs.js-tabs-wrapper
					.tabs__container
						.tabs__list
							.tabs__item
								a.tabs__link.js-tab-trigger.active(href="#tab-1") RETAIL STORES
							.tabs__item
								a.tabs__link.js-tab-trigger(href="#tab-2") ONLINE STORES
					.tabs__body
						.tabs__content.js-tab-content(id="tab-1")
							+shop-card({index:1})
							+shop-card({index:2})
							+shop-card({index:3})
							+shop-card({index:4})
						.tabs__content.js-tab-content(id="tab-2")
							.find-form__nothing
								.find-form__nothing-title The selected retailer does not stock this range. 
								.find-form__nothing-text Please select another retailer.
		.find-grid__map
			.map
				img(src="/img/map.png", alt="map")