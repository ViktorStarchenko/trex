extends /layout

block head
	- page.title = 'Home'

block content
	.we-help
		.we-help__menu
			.we-help__title How can we help you?
			.we-help__nav
				ul.we-help-nav
					li.we-help-nav__item
						a(href="#").we-help-nav__link
							span.we-help-nav__name Explore our Mattresses
								span.we-help-nav__icon
									+icon('arrow-right')(width="24" height="24" viewBox="0 0 24 24")
							span.we-help-nav__text Find your new bed from our ranges that cover everyone from the little ones in your home through all stages of life.
					li.we-help-nav__item
						a(href="#").we-help-nav__link
							span.we-help-nav__name Sleep Selector
								span.we-help-nav__icon
									+icon('arrow-right')(width="24" height="24" viewBox="0 0 24 24")
							span.we-help-nav__text Unsure which mattress you need? Complete our short Sleep Selector quiz and weâ€™ll match you to the perfect bed to suit your needs and your budget.
					li.we-help-nav__item
						a(href="#").we-help-nav__link
							span.we-help-nav__name Find a Retailer
								span.we-help-nav__icon
									+icon('arrow-right')(width="24" height="24" viewBox="0 0 24 24")
							span.we-help-nav__text FInd your nearest store to try out SleepMaker in-store and get their expert advice.
		.we-help__img
			picture
				source(media="(max-width: 768px)", srcset="../img/we-help/we-help-mob.png 1x, ../img/we-help/we-help-mob@2x.png 2x")
				+img('../img/we-help/we-help-desc', 'png')
	.feature-wrap
		// a(href="#").feature-card
		// or
		// div.feature-card
		+feature-card({img:'feature-card-2', title:'QUALITY', text:'SleepMaker mattresses are only made with the highest quality materials, ensuring total comfort and support.'})
		+feature-card({img:'feature-card-1', title:'AUSTRALIAN MADE', text:'SleepMaker maintains local manufacturing capabilities and is committed to on-shore manufacturing.'})
		+feature-card({img:'feature-card-3', title:'INNOVATION', text:'SleepMaker combine leading edge innovation, world-class operating processes of the highest quality products.'})
