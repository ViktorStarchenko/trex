mixin review-card(props={})
    .review-card
        .review-card__head
            .review-card__initials AB
            .review-card__info
                .review-card__name Amber Burrows
                .review-card__local New Zealand
            time.review-card__date 12/12/2012
        .review-card__body
            .review-card__rating
                //- img(src="../img/rating-stars.svg", alt="review stars")
                +rating(class=`rating--${props.star}`)
            .review-card__title Love this product
