        .review-card__footer
            .review-card__vote
                .review-card__vote-title Was this review helpful?
                a(href="#").review-card__vote-like
                    span.review-card__vote-icon
                        +icon('thumb')(width="16" height="16" viewBox="0 0 16 16")
                    span.review-card__vote-value 0
                a(href="#").review-card__vote-dislike
                    span.review-card__vote-icon
                        +icon('thumb')(width="16" height="16" viewBox="0 0 16 16")
                    span.review-card__vote-value 0